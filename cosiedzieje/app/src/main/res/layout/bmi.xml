<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="#ADC681">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tytuł"
              android:background="#96b561"
              android:padding="12sp"
              android:text="Oblicz swoje BMI"
              android:textColor="#442b48"
              android:textAlignment="center"
              android:textStyle="bold"
              android:typeface="serif"
              android:textSize="18sp"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/napiswaga"
              android:text="Wpisz swoją wagę:"
              android:padding="12sp"
              android:textColor="#442b48"
              android:textAlignment="center"
              android:textStyle="bold"
              android:typeface="serif"
              android:textSize="18sp"
              android:layout_below="@id/tytuł"
              android:layout_margin="10dp"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_below="@id/napiswaga"
              android:id="@+id/wpiszwage"
              android:background="#442b48"
              android:layout_marginTop="15dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/napiswzrost"
              android:text="Wpisz swój wzrost:"
              android:padding="12sp"
              android:textColor="#442b48"
              android:textAlignment="center"
              android:textStyle="bold"
              android:typeface="serif"
              android:textSize="18sp"
              android:layout_below="@id/wpiszwage"
              android:layout_margin="10dp"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_below="@id/napiswzrost"
              android:id="@+id/wpiszwzrost"
              android:background="#442b48"
              android:layout_marginTop="15dp"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/kliknij"
            android:text="Oblicz"
            android:textColor="#442b48"
            android:typeface="serif"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_below="@+id/wpiszwzrost"
            android:layout_margin="18dp"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bmitekst"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_above="@+id/wroc"
            android:layout_marginBottom="15dp"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/wroc"
            android:text="Wróć"
            android:textColor="#442b48"
            android:typeface="serif"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
    />

</RelativeLayout>